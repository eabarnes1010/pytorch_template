{
    "exp_name": "exp_test",
    "device": "gpu",
    "seed": 44,

    "data_loader": {
        "data_dir": "data/",
        "batch_size": 32,
        "args": {}
    },

    "arch": {
        "type": "cnn",
        "circular_padding": [5, 5, 0, 0],
        "filters": [32, 32, 32],
        "kernel_size": [5, 3, 3],
        "cnn_act": ["ReLU", "ReLU", "ReLU"],
        "hiddens_block": [10, 10, 10],
        "hiddens_block_act": ["ReLU", "ReLU", "ReLU"],
        "hiddens_final": 10,
        "hiddens_final_act": "Tanh"
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.00001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },

    "criterion": "ShashNLL",

    "metrics": [
        "custom_mae", "iqr_capture", "sign_test"
    ],

    "trainer": {
        "max_epochs": 15,
        "save_dir": "saved_models/",
        "early_stopping":{
            "args":{
                "patience": 2,
                "min_delta": 0.0
            }
        }
    }
}
